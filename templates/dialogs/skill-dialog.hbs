<form>
    <div class="form-group">
        <label>{{localize "ps.skills.label"}}</label>
        {{#if isEdit}}
            <input type="text" name="skill" value="{{localize currentSkillKey}}" disabled />
        {{else}}
            <select name="skill">
                {{{selectOptions skills selected=currentSkillKey}}}
            </select>
        {{/if}}
    </div>
    
    <div class="form-group">
        <label>{{localize "ps.skills.modifier"}}</label>
        <input type="number" name="mod" value="{{currentMod}}"/>
    </div>
</form>